<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thsword.netjob.dao.ICommentDao">
	<resultMap id="commentMapper" type="comment">
		<!-- ID -->
		<result property="id" column="pk_id" />
		<!-- 服务ID -->
		<result property="serveId" column="c_serveId" />
		<!-- 用户ID -->
		<result property="memberId" column="c_memberId" />
		<!-- 用户ID -->
		<result property="memberName" column="memberName" />
		<!-- 内容 -->
		<result property="content" column="c_content" />
		<!-- 时间 -->
		<result property="createDate" column="c_createDate" />
	</resultMap>

	<!-- #######################CRUD begin####################### -->  
	<!-- 增加 -->
	<insert id="addEntity" parameterType="comment"
		keyProperty="id">
		<![CDATA[
			INSERT INTO t_serve_comment (
						pk_id,
						c_serveId,
						c_memberId,
						c_content,
						c_createDate,
						c_createBy,
						c_updateDate,
						c_updateBy
		 				)
				VALUES(
						#{id},
						#{serveId},
						#{memberId},
						#{content},
						now(),
						#{createBy},
						now(),
						#{updateBy}
				 	  	)
		]]>
	</insert>

	<!-- 删除 -->
	<delete id="deleteEntity" parameterType="comment">
		<![CDATA[ DELETE FROM t_serve_comment WHERE pk_id=#{id}]]>
	</delete>

	<!-- 根据ID删除 -->
	<delete id="deleteEntityById" parameterType="java.lang.String">
		<![CDATA[ DELETE FROM t_serve_comment WHERE pk_id=#{entityId}]]>
	</delete>

	<!-- 更新 -->
	<update id="updateEntity" parameterType="comment">
		UPDATE t_serve_comment
		<set>
			c_updateDate=now()
		</set>
		WHERE pk_id = #{id}
	</update>

	<!-- 根据ID查找 -->
	<select id="queryEntityById" parameterType="java.lang.String" resultMap="commentMapper">
		<![CDATA[ SELECT t.* FROM t_serve_comment t WHERE pk_id = #{entityId} ]]>
	</select>

	<!--  条件查询查询所有 -->
	<select id="queryAllEntity" resultMap="commentMapper" parameterType="comment">
		 <![CDATA[ SELECT * FROM t_serve_comment WHERE 1=1]]>
		 <if test="null!=serveId and ''!=serveId">and c_serveId  = #{serveId }</if>
		 <if test="null!=memberId and ''!=memberId">and c_memberId = #{memberId}</if>
		 order by c_createDate desc
	</select>
	
	<!--  条件查询查询所有 -->
	<select id="queryEntity" resultMap="commentMapper" parameterType="comment">
		 <![CDATA[ SELECT * FROM t_serve_comment WHERE 1=1]]>
		 and pk_id = #{id}
	</select>
	
	<!--  条件查询查询所有 -->
	<select id="queryCountEntity" resultType="java.lang.Integer" parameterType="comment">
		 <![CDATA[ SELECT count(*) FROM t_serve_comment WHERE 1=1]]>
	</select>
	
	<!-- 查询分页列表(分页) -->
	<select id="queryPageEntity" resultMap="commentMapper" parameterType="java.util.Map">
		 <![CDATA[ SELECT t.*,m.c_name as memberName FROM t_serve_comment t,t_member m WHERE 1=1 and t.c_memberId = m.pk_id]]>
		 <if test="null!=serveId and ''!=serveId">and c_serveId  = #{serveId }</if>
		 <if test="null!=memberId and ''!=memberId">and c_memberId = #{memberId}</if>
	</select>

	<!-- #######################CRUD end####################### -->
</mapper>