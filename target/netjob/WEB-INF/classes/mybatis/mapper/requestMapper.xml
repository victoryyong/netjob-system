<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thsword.netjob.dao.IRequestDao">
	<resultMap id="requestMapper" type="request">
		<!-- 用户ID -->
		<result property="id" column="pk_id" />
		<!-- 标题 -->
		<result property="title" column="c_title" />
		<!-- 缩略图 -->
		<result property="image" column="c_image" />
		<!-- 需求方式(线上1 线下2) -->
		<result property="workType" column="c_work_type" />
		<!-- 结算方式(线上1 线下2) -->
		<result property="payType" column="c_pay_type" />
		<!-- 价格 -->
		<result property="price" column="c_price" />
		<!-- 报价方式(1一口价 2商议) -->
		<result property="priceType" column="c_price_type" />
		<!-- 有效期(/天) -->
		<result property="validity" column="c_validity" />
		<!-- 需求时间 -->
		<result property="requestTime" column="c_request_time" />
		<!-- 描述 -->
		<result property="description" column="c_description" />
		<!-- 类型id -->
		<result property="menuId" column="c_menu_id" />
		<!-- 视频+图片集合["aaa","bbb","ccc"] -->
		<result property="links" column="c_links" />
		<!-- 省 -->
		<result property="province" column="c_province" />
		<!-- 省 -->
		<result property="provinceName" column="c_province_name" />
		<!-- 市 -->
		<result property="citycode" column="c_citycode" />
			<!-- 市 -->
		<result property="cityName" column="c_city_name" />
		<!-- 区 -->
		<result property="area" column="c_area" />
		<!-- 详细地址 -->
		<result property="detailAddress" column="c_detail_address" />
		<!-- 关键字 -->
		<result property="keywords" column="c_keywords" />
		<!-- 是否发布 -->
		<result property="published" column="c_published" />
		<!-- 发布时间 -->
		<result property="publishDate" column="c_publish_date" />
		<!-- 会员ID -->
		<result property="memberId" column="c_member_id" />
	</resultMap>
	

	<!-- #######################CRUD begin####################### -->  
	<!-- 增加 -->
	<insert id="addEntity" parameterType="request"
		keyProperty="id">
		<![CDATA[
			INSERT INTO t_request (
						pk_id,
						c_title,
						c_image,
						c_work_type,
						c_pay_type,
						c_price,
						c_price_type,
						c_validity,
						c_request_time,
						c_menu_id,
						c_links,
						c_province,
						c_province_name,
						c_description,
						c_citycode,
						c_city_name,
						c_area,
						c_detail_address,
						c_keywords,
						c_publish_date,
						c_member_id,
						c_createDate,
						c_createBy,
						c_updateDate,
						c_updateBy
		 				)
				VALUES(
						#{id},
						#{title},
						#{image},
						#{workType},
						#{payType},
						#{price},
						#{priceType},
						#{validity},
						#{requestTime},
						#{menuId},
						#{links},
						#{province},
						#{provinceName},
						#{description},
						#{citycode},
						#{cityName},
						#{area},
						#{detailAddress},
						#{keywords},
						#{publishDate},
						#{memberId},
						now(),
						#{createBy},
						now(),
						#{updateBy}
				 	  	)
		]]>
	</insert>

	<!-- 删除 -->
	<delete id="deleteEntity" parameterType="request">
		<![CDATA[ DELETE FROM t_request WHERE pk_id=#{id}]]>
	</delete>

	<!-- 根据ID删除 -->
	<delete id="deleteEntityById" parameterType="java.lang.String">
		<![CDATA[ DELETE FROM t_request WHERE pk_id=#{entityId}]]>
	</delete>

	<!-- 更新 -->
	<update id="updateEntity" parameterType="request">
		UPDATE t_request
		<set>
			<if test="null!=title">c_title=#{title},</if>
			<if test="null!=image">c_image=#{image},</if>
			<if test="null!=workType ">c_work_type=#{workType},</if>
			<if test="null!=payType">c_pay_type=#{payType}, </if>
			<if test="null!=price">c_price=#{price},</if>
			<if test="null!=priceType">c_price_type=#{priceType},</if>
			<if test="null!=validity">c_validity=#{validity},</if>
			<if test="null!=requestTime">c_request_time=#{requestTime},</if>
			<if test="null!=menuId">c_menu_id=#{menuId},</if>
			<if test="null!=links">c_links=#{links},</if>
			<if test="null!=province">c_province=#{province},</if>
			<if test="null!=provinceName">c_province_name=#{provinceName},</if>
			<if test="null!=description">c_description=#{description},</if>
			<if test="null!=citycode">c_citycode=#{citycode},</if>
			<if test="null!=cityName">c_city_name=#{cityName},</if>
			<if test="null!=area">c_area=#{area},</if>
			<if test="null!=detailAddress">c_detail_address=#{detailAddress},</if>
			<if test="null!=keywords">c_keywords=#{keywords},</if>
			<if test="null!=published">c_published=#{published}</if>
		</set>
		WHERE pk_id = #{id}
	</update>

	<!-- 根据ID查找 -->
	<select id="queryEntityById" parameterType="java.lang.String" resultMap="requestMapper">
		<![CDATA[ SELECT t.* FROM t_request t WHERE pk_id = #{entityId} ]]>
	</select>

	<!--  条件查询查询所有 -->
	<select id="queryAllEntity" resultMap="requestMapper" parameterType="request">
		 <![CDATA[ SELECT * FROM t_request WHERE 1=1]]>
		 order by c_created_date desc
	</select>
	
	<!--  条件查询查询所有 -->
	<select id="queryEntity" resultMap="requestMapper" parameterType="request">
		 <![CDATA[ SELECT * FROM t_request WHERE 1=1]]>
		  order by c_createdDate desc
	</select>
	
	<!--  条件查询查询所有 -->
	<select id="queryCountEntity" resultType="java.lang.Integer" parameterType="request">
		 <![CDATA[ SELECT count(*) FROM t_request WHERE 1=1]]>
	</select>
	
	<!-- 查询分页列表(分页) -->
	<select id="queryPageEntity" resultMap="requestMapper" parameterType="java.util.Map">
		 <![CDATA[ SELECT * FROM t_request WHERE 1=1]]>
	</select>

	<!-- #######################CRUD end####################### -->
	
	
</mapper>